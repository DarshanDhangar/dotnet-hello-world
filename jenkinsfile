pipeline {
    agent any

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-pwd')
        DOCKER_IMAGE_NAME = "darshandhangar/dotnet-hello-world"
        ENVIRONMENT = "${params.ENVIRONMENT}"
        GIT_TOOL = name: 'Default Git'  // Ensure this matches the Git tool configuration in Jenkins
    }

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/DarshanDhangar/dotnet-hello-world.git', tool: 'Default Git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image"
                    docker.build("${DOCKER_IMAGE_NAME}:${env.BUILD_ID}", "--no-cache -f Dockerfile .")
                }
            }
        }

        // Other stages...
    }
}
